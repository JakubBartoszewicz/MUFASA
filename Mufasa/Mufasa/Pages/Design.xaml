<UserControl x:Class="Mufasa.Pages.Design"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="536">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Button x:Name="openFileButton" Content="Open fragments..." HorizontalAlignment="Left" Margin="98,24,0,0" VerticalAlignment="Top" Width="139" ToolTip="Open fragment sequence file" Click="openFileButton_Click"/>
                <ListBox x:Name="fragmentListBox" Height="100" Width="100"/>
            </StackPanel>
        </ScrollViewer>        
    </Grid>
</UserControl>
